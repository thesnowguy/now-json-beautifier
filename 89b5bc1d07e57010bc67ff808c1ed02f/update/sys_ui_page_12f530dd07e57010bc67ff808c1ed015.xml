		<title>
			JSON Formatter
		</title>
	</head>
	<body>
		<textarea style="float:left" name="source" id="jsoninput" cols="100" rows="50"></textarea>
		<div id="buttons" style="float:left">
			<button onclick="beautifyJSON()">
				Beautify
			</button>
			<button onclick="validateJSON()">
				Validate
			</button>
		</div>    

		<textarea style="float:left; white-space:nowrap; color: #f5427b; font-weight: bold" name="source" id="jsonoutput" cols="100" rows="50"></textarea>
